{
	"languageserver": {
		"golang": {
			"command": "gopls",
			"filetypes": ["go"],
			"rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
			"initializationOptions": {
				"usePlaceholders": true,
				"analyses": {
					"unusedparams": true
				}
			}
		},
		"clangd": {
			"command": "clangd",
			"rootPatterns": ["compile_flags.txt", "compile_commands.json"],
			"filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp"]
		}
	}
}
