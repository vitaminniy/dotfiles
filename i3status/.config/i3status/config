# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

order += "wireless wlan0"
order += "cpu_usage"
order += "memory"
order += "battery 0"
order += "volume master"
order += "tztime local"

wireless wlan0 {
	format_up = "WIFI: %essid %quality"
	format_down = "WIFI: down"
}

cpu_usage {
	format = "CPU %usage"
}

memory {
	format = "RAM %used / %total (%percentage_used)"
}

battery 0 {
	format = "BAT %percentage %remaining"
}

volume master {
	format = "VOL %volume"
	format_muted = "MUTED"
}

tztime local {
	format = "%Y-%m-%d %H:%M"
}

